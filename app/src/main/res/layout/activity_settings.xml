<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fourheads.org.readlocaljson.SettingsActivity"
    android:id="@+id/background"
    android:background="@color/Fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="servidor"
        android:id="@+id/label1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/Etiquetas" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_settings_servidor"
        android:layout_below="@+id/label1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/TextoUsuario" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/button_guardar"
        android:background="#ffa2a2a2"
        android:textColor="#ff000000"
        android:layout_below="@+id/editText_settings_directorio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="puerto"
        android:id="@+id/label2"
        android:layout_below="@+id/editText_settings_servidor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/Etiquetas" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_settings_puerto"
        android:inputType="number"
        android:layout_below="@+id/label2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_settings_servidor"
        android:layout_alignEnd="@+id/editText_settings_servidor"
        android:textColor="@color/TextoUsuario"
        android:maxLength="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="directorio"
        android:id="@+id/label3"
        android:layout_below="@+id/editText_settings_puerto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/Etiquetas" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_settings_directorio"
        android:layout_below="@+id/label3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_settings_puerto"
        android:layout_alignEnd="@+id/editText_settings_puerto"
        android:textColor="@color/TextoUsuario" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:id="@+id/button_ayuda"
        android:background="@color/FondoBoton"
        android:textColor="@color/TextoBoton"
        android:layout_alignTop="@+id/button_guardar"
        android:layout_alignRight="@+id/editText_settings_directorio"
        android:layout_alignEnd="@+id/editText_settings_directorio"
        android:layout_marginRight="26dp" />


</RelativeLayout>
