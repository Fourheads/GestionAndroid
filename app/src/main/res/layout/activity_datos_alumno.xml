<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fourheads.org.gestionescuelaandroid.activities.DatosAlumnoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/alumno_nombre_label"
        android:id="@+id/textView_alumno_nombre_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_alumno_nombre"
        android:layout_toEndOf="@+id/textView_alumno_apellido_label"
        android:layout_above="@+id/textView_alumno_apellido_label"
        android:layout_toRightOf="@+id/textView_alumno_apellido_label"
        android:layout_marginLeft="27dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/apellido_nombre_label"
        android:id="@+id/textView_alumno_apellido_label"
        android:layout_below="@+id/textView_alumno_nombre_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_alumno_apellido"
        android:layout_toEndOf="@+id/textView_alumno_apellido_label"
        android:layout_alignTop="@+id/textView_alumno_apellido_label"
        android:layout_toRightOf="@+id/textView_alumno_apellido_label"
        android:layout_marginLeft="27dp"
        android:layout_alignRight="@+id/textView_alumno_nombre"
        android:layout_alignEnd="@+id/textView_alumno_nombre" />

</RelativeLayout>
